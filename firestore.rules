rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Basis-Regel: Nur authentifizierte Admin-Benutzer haben Zugriff
    match /{document=**} {
      allow read, write: if request.auth != null 
        && request.auth.token.email in [
          'contact@rosenrausch.xyz',
          'admin@rosenrausch.xyz'
          // Weitere Admin-E-Mails hier hinzufügen
        ];
    }
    
    // Spezifische Regeln für Admin-Collection (optional)
    match /admins/{adminId} {
      allow read, write: if request.auth != null 
        && request.auth.uid == adminId
        && request.auth.token.email in [
          'contact@rosenrausch.xyz',
          'admin@rosenrausch.xyz'
        ];
    }
    
    // Team Members Collection
    match /team-members/{memberId} {
      allow read, write: if request.auth != null 
        && request.auth.token.email in [
          'contact@rosenrausch.xyz',
          'admin@rosenrausch.xyz'
        ];
    }
    
    // News Items Collection
    match /news-items/{newsId} {
      allow read, write: if request.auth != null 
        && request.auth.token.email in [
          'contact@rosenrausch.xyz',
          'admin@rosenrausch.xyz'
        ];
    }
    
    // Events Collection
    match /events/{eventId} {
      allow read, write: if request.auth != null 
        && request.auth.token.email in [
          'contact@rosenrausch.xyz',
          'admin@rosenrausch.xyz'
        ];
    }
    
    // Quotes Collection
    match /quotes/{quoteId} {
      allow read, write: if request.auth != null 
        && request.auth.token.email in [
          'contact@rosenrausch.xyz',
          'admin@rosenrausch.xyz'
        ];
    }
  }
}