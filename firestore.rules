// Basiert auf https://github.com/itsliande/aboutme/blob/main/firestore.rules

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allgemeine Regel: Nur authentifizierte Admin-Benutzer haben Zugriff
    match /{document=**} {
      allow read, write: if request.auth != null 
        && request.auth.token.email in [
          'contact@rosenrausch.xyz',
          'admin@rosenrausch.xyz'
        ];
    }
    
    // Team Members Collection
    match /team-members/{memberId} {
      allow read, write: if request.auth != null 
        && request.auth.token.email in [
          'contact@rosenrausch.xyz',
          'admin@rosenrausch.xyz'
        ];
    }
    
    // News Items Collection
    match /news-items/{newsId} {
      allow read, write: if request.auth != null 
        && request.auth.token.email in [
          'contact@rosenrausch.xyz',
          'admin@rosenrausch.xyz'
        ];
    }
    
    // Events Collection
    match /events/{eventId} {
      allow read, write: if request.auth != null 
        && request.auth.token.email in [
          'contact@rosenrausch.xyz',
          'admin@rosenrausch.xyz'
        ];
    }
    
    // Quotes Collection
    match /quotes/{quoteId} {
      allow read, write: if request.auth != null 
        && request.auth.token.email in [
          'contact@rosenrausch.xyz',
          'admin@rosenrausch.xyz'
        ];
    }
    
    // Admin Users Collection (optional)
    match /admins/{userId} {
      allow read: if request.auth != null 
        && request.auth.uid == userId;
      allow write: if request.auth != null 
        && request.auth.token.email in [
          'contact@rosenrausch.xyz'
        ];
    }
  }
}