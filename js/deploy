name: Deploy to GitHub Pages

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]

permissions:
  contents: read
  pages: write
  id-token: write

concurrency:
  group: "pages"
  cancel-in-progress: false

jobs:
  deploy:
    environment:
      name: github-pages
      url: ${{ steps.deployment.outputs.page_url }}
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Replace API Key in Firebase Config
        run: |
          echo "üîß Ersetze API_KEY_RAUSHI mit echtem API-Key..."
          # Ersetze in der Firebase-Config-Datei
          sed -i 's/API_KEY_RAUSHI/${{ secrets.API_KEY_RAUSHI }}/g' js/firebase-config.js
          
          # Zeige den ersten Teil der Datei zur √úberpr√ºfung (ohne den echten Key zu zeigen)
          echo "üìÑ Firebase-Config nach Ersetzung:"
          head -n 50 js/firebase-config.js | grep -A 5 -B 5 "apiKey"
          
          # √úberpr√ºfe, ob die Ersetzung erfolgreich war
          if grep -q "API_KEY_RAUSHI" js/firebase-config.js; then
            echo "‚ùå FEHLER: API_KEY_RAUSHI wurde nicht ersetzt!"
            exit 1
          else
            echo "‚úÖ API_KEY_RAUSHI wurde erfolgreich ersetzt"
          fi

      - name: Verify API Key Replacement
        run: |
          echo "üîç √úberpr√ºfe API-Key-Ersetzung..."
          if grep -q "API_KEY_RAUSHI" js/firebase-config.js; then
            echo "‚ùå FEHLER: Placeholder wurde nicht ersetzt!"
            grep -n "API_KEY_RAUSHI" js/firebase-config.js
            exit 1
          else
            echo "‚úÖ Alle Platzhalter wurden ersetzt"
          fi

      - name: Setup Pages
        uses: actions/configure-pages@v4

      - name: Upload artifact
        uses: actions/upload-pages-artifact@v3
        with:
          path: '.'

      - name: Deploy to GitHub Pages
        id: deployment
        uses: actions/deploy-pages@v4